{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true ,
      "moduleResolution":"node",
      "removeComments": true ,
      "sourceMap": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowJs": true,
    }, 
    "include": ["src"],
    "exclude": ["node_modules","dist/+","src/static"],
    "lib": ["es6"]
  }